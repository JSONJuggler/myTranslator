{
  "name": "mytranslator",
  "version": "1.0.0",
  "description": "Teacher friendly translator",
  "engines": {
    "node": "13.8.x"
  },
  "main": "server.js",
  "scripts": {
    "start": "node server",
    "server": "nodemon server",
    "debug-server": "nodemon --inspect server",
    "client": "npm start --prefix client",
    "brMac": "/Applications/Brave\\ Browser.app/Contents/MacOS/Brave\\ Browser --remote-debugging-port=9222 --user-data-dir=/tmp/brave-debug",
    "brWin": "start brave.exe localhost:3000 --remote-debugging-port=9222 --user-data-dir=c:/tmp/debug-profile",
    "debugMac": "concurrently \"npm run brMac\" \"npm run client\" \"npm run debug-server\"",
    "debugWin": "concurrently \"npm run brWin\" \"npm run client\" \"npm run debug-server\"",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "author": "Deleon Reescano",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^5.1.0",
    "nodemon": "^2.0.2"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "ibm-watson": "^5.4.0"
  }
}
